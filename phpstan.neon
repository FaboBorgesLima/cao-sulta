parameters:

  level: 6
  paths:
    - app
    - core
    - tests

  excludePaths:
    - app/views/*

  ignoreErrors:
    - '#Unsafe usage of new static\(\)\.#'
    - '#Call to an undefined method ReflectionType::getName\(\).#'
    - '#Access to an undefined property App\\Models\\UserToken::\$[a-zA-Z0-9_]+.#'